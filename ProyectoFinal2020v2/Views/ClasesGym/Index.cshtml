@model IEnumerable<ProyectoFinal2020v2.Models.ClaseGym>

@{
    ViewData["Title"] = "Index";
}
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<h3 class="container p-3 my-3 text-white text-center rounded-l"
    style="background-color: rgb(107, 0, 130)">
    <i class="fas fa-chalkboard"></i> Clases Gym
</h3>
<table id="table" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdActividad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>

            <th>
                <a class="btn btn-success" asp-action="Create">
                    Crear Nuevo
                    <i class="fas fa-plus-square"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdActividadNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSalaNavigation.NombreSala)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Nombre)
                    @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Apellido1)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdClaseGym" class="btn btn-primary btn-sm">Editar <i class="fas fa-pen"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdClaseGym" class="btn btn-secondary btn-sm">Detalle <i class="fas fa-align-justify "></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdClaseGym" class="btn btn-danger btn-sm">Eliminar <i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}