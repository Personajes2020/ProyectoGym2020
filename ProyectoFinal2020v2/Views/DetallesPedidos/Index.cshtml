@model IEnumerable<ProyectoFinal2020v2.Models.DetallesPedido>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

@{
    ViewData["Title"] = "Index";
}

<h1 class="container p-3 my-3 text-white text-center rounded-l" style="background:#217e7e"><i class="fas fa-scroll"></i>Detalles de Pedidos</h1>



<div class="container">

    <table id="table" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioUnidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnidadesSolicitadas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCaducidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCategoriaNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPedidoNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdProductoNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdProveedorNavigation)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioUnidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadesSolicitadas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCaducidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdPedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProductoNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedorNavigation.NombreRepresentante)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-secondary" asp-controller="Pedidos" asp-action="Index">
        Volver a pedidos
        <i class="fas fa-undo"></i>
    </a>
</div>
<link href="~/css/tablas.css" rel="stylesheet" />
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                responsive: "true",
                dom: 'Bfrtilp',

                buttons: [

                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success',

                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> ',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-danger'
                    },
                    {
                        onclick: 'columna',
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> ',
                        titleAttr: 'Imprimir',
                        className: 'btn btn-info'

                    },

                ]



            });
        });
    </script>

}
