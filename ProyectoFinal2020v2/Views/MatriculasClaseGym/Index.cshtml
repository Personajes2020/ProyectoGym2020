@model IEnumerable<ProyectoFinal2020v2.Models.MatriculaClaseGym>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@{
    ViewData["Title"] = "Index";
}
<h3 class="container p-3 my-3 text-white text-center rounded-l"
    style="background-color: #0080FF">
    <i class="fas fa-laptop"></i>  Matricula Gym
</h3>
<a class="btn btn-success" asp-action="Create">
    Crear Nuevo
    <i class="fas fa-plus-square"></i>
</a>
<br />
<br />

<table id="table" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdClaseGym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>

            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClaseGymNavigation.IdClaseGym)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nombre)
                    @Html.DisplayFor(modelItem => item.IdClienteNavigation.Apellido1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMatriculaGym" class="btn btn-primary btn-sm">Editar <i class="fas fa-pen"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdMatriculaGym" class="btn btn-secondary btn-sm">Detalle <i class="fas fa-align-justify "></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMatriculaGym" class="btn btn-danger btn-sm">Eliminar <i class="fas fa-trash"></i></a>

                </td>

            </tr>
        }
    </tbody>
</table>
<link href="~/css/tablas.css" rel="stylesheet" />
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                responsive: "true",
                dom: 'Bfrtilp',

                buttons: [

                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success',

                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> ',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-danger'
                    },
                    {
                        onclick: 'columna',
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> ',
                        titleAttr: 'Imprimir',
                        className: 'btn btn-info'

                    },

                ]



            });
        });
    </script>

}
