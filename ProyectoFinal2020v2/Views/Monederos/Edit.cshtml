@model ProyectoFinal2020v2.Models.Monedero

@{
    ViewData["Title"] = "Edit";
}
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<h1 class="container p-3 my-3 text-white text-center rounded-l" style="background: #00ffff"><i class="fas fa-wallet"></i> Editar Monedero</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdMonedero" />
                <div class="form-group">
                    <label asp-for="IdCliente" class="control-label"></label>
                    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Saldo" class="control-label"></label>
                    <input asp-for="Saldo" class="form-control" />
                    <span asp-validation-for="Saldo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Atras</a>
                </div>
            </form>
        </div>
    </div>
</div>