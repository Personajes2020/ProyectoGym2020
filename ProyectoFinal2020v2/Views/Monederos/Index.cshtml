@model IEnumerable<ProyectoFinal2020v2.Models.Monedero>

@{
    ViewData["Title"] = "Index";
}
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<h1 class="container p-3 my-3 text-white text-center rounded-l" style="background: #7300e6"><i class="fas fa-piggy-bank"></i> Monedero</h1>
<div class="container">
    <table id="table" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo)
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Acciones
                    <a class="btn btn-success" asp-action="Create">
                        Crear Nuevo
                        <i class="fas fa-plus-square"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nombre)
                        @Html.DisplayFor(modelItem => item.IdClienteNavigation.Apellido1)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdMonedero" class="btn btn-primary btn-sm">Editar<i class="fas fa-pen "></i></a>
                        <a asp-action="Details" asp-route-id="@item.IdMonedero" class="btn btn-secondary btn-sm">Detalles<i class="fas fa-align-justify "> </i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdMonedero" class="btn btn-danger btn-sm">Eliminar<i class="fas fa-trash "></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<link href="~/css/tablas.css" rel="stylesheet" />
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                responsive: "true",
                dom: 'Bfrtilp',

                buttons: [

                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success',

                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> ',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-danger'
                    },
                    {
                        onclick: 'columna',
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> ',
                        titleAttr: 'Imprimir',
                        className: 'btn btn-info'

                    },

                ]



            });
        });
    </script>

}
