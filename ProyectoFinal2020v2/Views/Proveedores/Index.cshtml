@model IEnumerable<ProyectoFinal2020v2.Models.Proveedor>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@{
    ViewData["Title"] = "Index";
}


<h1 class="container p-3 my-3 text-white text-center rounded-l" style="background:#0489B1"><i class="fas fa-cart-plus">Proveedores</i></h1>
<div class="container">
    <a asp-action="Create" class="btn btn-success">
        Crear nuevo
        <i class="fas fa-plus-square"></i>

    </a>
    <br />
    <br />

    <table id="table" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Identificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreRepresentante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreRepresentante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <div class="btn-group" style='font-size: 5px'>
                            <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-primary btn-sm"><i class="fas fa-marker"></i>Editar</a>
                            <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-secondary btn-sm"><i class="fas fa-stream"></i>Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<link href="~/css/tablas.css" rel="stylesheet" />
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                responsive: "true",
                dom: 'Bfrtilp',

                buttons: [

                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> ',
                        titleAttr: 'Exportar a Excel',
                        className: 'btn btn-success',

                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> ',
                        titleAttr: 'Exportar a PDF',
                        className: 'btn btn-danger'
                    },
                    {
                        onclick: 'columna',
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> ',
                        titleAttr: 'Imprimir',
                        className: 'btn btn-info'

                    },

                ]



            });
        });
    </script>

}
