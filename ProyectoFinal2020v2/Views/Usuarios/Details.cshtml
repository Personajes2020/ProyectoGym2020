@model ProyectoFinal2020v2.Usuarios
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

@{
    ViewData["Title"] = "Details";
}
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<h4 class="container p-3 my-3 bg-secondary text-white text-center rounded-l"><i class="fas fa-align-justify "></i> Detalle Usuario</h4>

<div class="container">
    <h4>Detalles de Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class="col-sm-2" hidden="hidden">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class="col-sm-10" hidden="hidden">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class="col-sm-2" hidden="hidden">
            @Html.DisplayNameFor(model => model.ConfirmarContraseña)
        </dt>
        <dd class="col-sm-10" hidden="hidden">
            @Html.DisplayFor(model => model.ConfirmarContraseña)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdRoleNavigation.NombreRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdRoleNavigation.NombreRole)
        </dd>
    </dl>
</div>
<div class="container">
    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Atrás</a>
</div>
